@page "/accountPage"
@using DataAccessLibrary.Models
@using DataAccessLibrary.SQLite
@using ESOCompanion.Data
@inject AppData data
@inject IUserData userData
@inject NavigationManager NavigationManager

<h1>AccountPage</h1>
@if (users is null)
{
    <h3>Loading...</h3>
}
else
{
    <h3>Users</h3>
    <div class="container">
        <table class="table table-active table-bordered table-dark">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>User Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.ID</td>
                        <td>@user.userName</td>
                        <td>@user.userEmail</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    public List<UserModel> users;
    public UserModel user;
    protected override async Task OnInitializedAsync()
    {
        users = await userData.GetUsers();
    }
    public async Task SearchUsers()
    {
        // If user does exist, login, else return
        if (users.Contains(user))
        {
            Console.WriteLine(user.userName + " found!");
            await userData.SearchForUser(user.userName);
        }
        else
        {
            Console.WriteLine(user.userName + " not found!");
            return;
        }
    }
}
