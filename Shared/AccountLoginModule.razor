@using ESOCompanion.Pages
@using DataAccessLibrary.Models
@using DataAccessLibrary.SQLite

@inject AccountPage accPage
@inject UserData userData

<h3>AccountLoginModule</h3>
<div class="container">
    <EditForm Model="@userData" OnValidSubmit="@accPage.SearchUsers">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="userName">User Name </span>
            </div>
            <InputText id="userName" @bind-Value="accPage.user.userName" />
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="userPassword">Password </span>
            </div>
            <InputText id="userPassword" @bind-Value="accPage.user.userPassword" />
        </div>
        <button class="btn btn-primary oi oi-plus" @onclick="accPage.SearchUsers"> Submit</button>
    </EditForm>
</div>
